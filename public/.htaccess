
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Konfigurasi untuk deploy di folder /simpdb/
  # Mengarahkan base rewrite ke folder aplikasi, bukan root domain
  RewriteBase /simpdb/

  # ATURAN 1: Izinkan akses langsung ke file atau folder yang benar-benar ada
  # Ini SANGAT PENTING agar api.php, gambar, css, dan js tetap bisa diakses
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # ATURAN 2: Redirect semua request sisa ke index.html
  # Jika file tidak ditemukan, server akan memuat index.html di dalam folder simpdb
  RewriteRule ^ index.html [L]
</IfModule>

# Keamanan: Matikan listing direktori agar orang luar tidak bisa melihat daftar file dalam folder
Options -Indexes

# Pastikan file JavaScript dan CSS diload dengan tipe konten yang benar
<IfModule mod_mime.c>
  AddType application/javascript .js
  AddType text/css .css
</IfModule>
